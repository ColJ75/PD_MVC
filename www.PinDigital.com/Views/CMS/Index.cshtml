@model IEnumerable<CMSViewModel>

@{
	ViewData["Title"] = "CMS Pages";
}

<h2>@ViewData["Title"]</h2>

<p><a asp-action="Create">Create New</a></p>

<table class="table table-striped table-bordered table-hover table-responsive">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Page.Title)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Page.Url)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Page.Status)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Page.ModifiedDate)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
					@Html.DisplayFor(modelItem => item.Page.Title)
				</td>
				<td class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
					<a href="@item.Page.Url">@item.Page.Url</a>
				</td>
				<td class="col-lg-1 col-md-1 col-sm-1 col-xs-1">
					@Html.DisplayFor(modelItem => item.Page.Status)
				</td>
				<td class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
					@Html.DisplayFor(modelItem => item.Page.ModifiedDate)
				</td>
				<td class="col-lg-1 col-md-1 col-sm-1 col-xs-1 text-center">
					<a asp-action="Edit" asp-route-PageId="@item.Page.PageId" class="glyphicon glyphicon-edit"></a>
					<a asp-action="Delete" asp-route-PageId="@item.Page.PageId" class="glyphicon glyphicon-trash"></a>
				</td>
			</tr>
		}
	</tbody>
</table>
