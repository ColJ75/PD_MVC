@model IEnumerable<UserAddress>

@{
	ViewData["Title"] = "Address Book";
}

<h2>@ViewData["Title"]</h2>

<p><a asp-controller="AddressBook" asp-action="Create">Create New</a></p>

<table class="table table-striped table-bordered table-hover table-responsive">
	<thead>
		<tr>
			<th>Address</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td class="col-lg-11 col-md-11 col-sm-11 col-xs-11">
					@if (!string.IsNullOrEmpty(item.Company))
					{
						@Html.DisplayFor(modelItem => item.Company)<br />
					}
					@Html.DisplayFor(modelItem => item.Building)<br />
					@Html.DisplayFor(modelItem => item.Street)<br />
					@Html.DisplayFor(modelItem => item.Area)<br />
					@Html.DisplayFor(modelItem => item.Town)<br />
					@Html.DisplayFor(modelItem => item.County)<br />
					@Html.DisplayFor(modelItem => item.Postcode)<br />
					@Html.DisplayFor(modelItem => item.Country)
				</td>
				<td class="col-lg-1 col-md-1 col-sm-1 col-xs-1 text-center">
					<a asp-action="Edit" asp-route-id="@item.AddressId" class="glyphicon glyphicon-edit"></a>
					<a asp-action="Delete" asp-route-id="@item.AddressId" class="glyphicon glyphicon-trash"></a>
				</td>
			</tr>
		}
	</tbody>
</table>
